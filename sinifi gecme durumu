
 Scanner klv = new Scanner(System.in);
       double  ortalama = 0;
        System.out.println("lutfen mat notunu giriniz");
        int mat = klv.nextInt();
        System.out.println("lutfen fizik notunu giriniz");
        int fizik = klv.nextInt();
        System.out.println("lutfen turkce notunu giriniz");
        int turkce = klv.nextInt();
        System.out.println("lutfen muzik notunu giriniz");
        int muzik = klv.nextInt();
        System.out.println("lutfen tarih notunu giriniz");
        int tarih = klv.nextInt();
        System.out.println("lutfen kimya notunu giriniz");
        int kimya = klv.nextInt();
        
        if ((mat >= 0 && mat <= 100) && (turkce >= 0 && turkce <= 100) &&
                (fizik >= 0 && fizik <= 100) && (muzik >= 0 && muzik <= 100)) {

          ortalama = (mat + fizik + turkce + kimya + muzik) / 5;
            System.out.println("Ortalama: " + ortalama);
            
        }
         if (ortalama>=55) {
             System.out.println("basarili");
        }
         else if (ortalama<55) {
             System.out.println("basarisiz");
        }

